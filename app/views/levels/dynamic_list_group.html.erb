<%# The below code creates an array of 10 random names %>
<%= names = Array.new(10) { Faker::Name.unique.name  } %>

<div class="container">
  <div class="row">
    <div class="offset-md-4 col-md-4">
      <ul class="list-group">
        <% names.each do |name| %>
          <li class="list-group-item list-group-item-action d-flex justify-content-between"><%= name %>
            <span class="badge text-bg-primary rounded-pill"><%= rand(10)%></span>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
